<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BilSplit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/green_primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/green_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/green_primary_dark</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorTertiary">@color/green_primary_dark</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/green_primary_dark</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        <item name="colorError">@color/design_default_color_error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/dark_text_secondary</item>
        <item name="colorOutline">@color/dark_border</item>
        <item name="colorOutlineVariant">@color/dark_outline</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_text_primary</item>
        <item name="colorSurfaceInverse">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/text_primary</item>
        <item name="colorPrimaryInverse">@color/green_primary</item>
    </style>

    <style name="Theme.BilSplit" parent="Base.Theme.BilSplit" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/split</item>
        <item name="postSplashScreenTheme">@style/Theme.BilSplit</item>
    </style>

</resources>